{
  "feedbackSurveyState": {
    "lastShownTime": 1754085923371
  },
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "agents": {
    "enabled": true,
    "defaultModel": "sonnet",
    "timeout": 60000
  },
  "permissions": {
    "allow": [
      "Read(*)",
      "Write(*)",
      "Edit(*)",
      "Glob(*)",
      "Grep(*)",
      "TodoWrite(*)"
    ]
  },
  "env": {
    "CLAUDE_CODE_ENABLE_AGENTS": "1",
    "CLAUDE_CODE_SUBAGENT_MODEL": "sonnet"
  },
  "statusLine": {
    "enabled": true,
    "format": "developer",
    "elements": {
      "currentFile": {
        "enabled": true,
        "showRelativePath": true,
        "maxLength": 40
      },
      "cursorPosition": {
        "enabled": true,
        "format": "line:column"
      },
      "gitBranch": {
        "enabled": true,
        "showStatus": true,
        "maxLength": 20
      },
      "gitChanges": {
        "enabled": true,
        "showCounts": true
      },
      "buildStatus": {
        "enabled": true,
        "watchCommands": [
          "npm run build",
          "npm test",
          "cdk synth"
        ]
      },
      "projectInfo": {
        "enabled": true,
        "showProjectName": true
      }
    },
    "appearance": {
      "theme": "minimal",
      "colors": {
        "gitBranch": "cyan",
        "gitModified": "yellow",
        "buildSuccess": "green",
        "buildFail": "red",
        "cursorPosition": "dim"
      },
      "separator": " | ",
      "updateFrequency": "real-time"
    },
    "layout": {
      "template": "{project} | {file}:{line}:{col} | {branch}±{changes} | {build}",
      "responsiveBreakpoints": {
        "narrow": "{file} {branch}",
        "wide": "{project} | {file}:{line}:{col} | {branch}±{changes} | {build} | {errors}"
      }
    }
  },
  "model": "opusplan"
}